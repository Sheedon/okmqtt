<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/btn_publish_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_publish_message"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn_subscribe_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_subscribe_topic"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn_rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_request_and_response" />

        <Button
            android:id="@+id/btn_subscribe_array"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_subscribe_topic_array" />
    </LinearLayout>
</layout>